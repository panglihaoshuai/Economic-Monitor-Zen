# 1. FRED API Key
# Get from: https://fred.stlouisfed.org/docs/api/api_key
FRED_API_KEY=your_fred_api_key_here

# 2. Supabase Configuration  
NEXT_PUBLIC_SUPABASE_URL=https://amwvaakquduxoahmisww.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# 3. NextAuth Configuration
NEXTAUTH_URL=https://economic-monitor-zen.vercel.app
NEXTAUTH_SECRET=your_nextauth_secret_here_32_characters_minimum

# 4. Cron Security
CRON_SECRET=your_random_cron_secret_here_at_least_32_characters

# 5. Optional API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
RESEND_API_KEY=your_resend_api_key_here

# 6. Database URL (for NextAuth)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Deployment Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://economic-monitor-zen.vercel.app

# Instructions:
# 1. Go to Vercel dashboard → your project → Settings → Environment Variables
# 2. Add each variable above with your actual values
