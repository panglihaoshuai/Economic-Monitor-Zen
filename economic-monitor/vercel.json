{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "ignoreCommand": "echo 'No ignore command configured'",
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://economic-monitor-zen.vercel.app",
    "FRED_API_KEY": "@fred_api_key",
    "NEXTAUTH_SECRET": "@nextauth_secret",
    "NEXTAUTH_URL": "https://economic-monitor-zen.vercel.app",
    "NEXT_PUBLIC_SUPABASE_URL": "@supabase_url",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@supabase_anon_key",
    "DEEPSEEK_API_KEY": "@deepseek_api_key",
    "RESEND_API_KEY": "@resend_api_key"
  },
  "crons": [
    {
      "path": "api/cron/fetch-data",
      "schedule": "0 0 * * *"
    },
    {
      "path": "api/cron/weekly-full-sync", 
      "schedule": "0 2 * * 0"
    },
    {
      "path": "api/cron/health-check",
      "schedule": "*/30 * * * *"
    }
  ],
  "functions": {
    "api/cron/fetch-data": {
      "maxDuration": 60
    },
    "api/cron/weekly-full-sync": {
      "maxDuration": 900
    },
    "api/cron/health-check": {
      "maxDuration": 10
    }
  }
}
